# To sort a file:
sort file

# To sort a file by keeping only unique:
sort -u file

# To sort a file and reverse the result:
sort -r file

# To sort a file randomly:
sort -R file

# use = as field seprator, 2nd value as KEY, numeric sort
sort -t '=' -k 2 -g

# OPTIONS
- -t, --field-seprator=SEP
- -k, --key=KEYDEF

## sort options
- -g, --general-numeric-sort

## count frequence and sort with descending order
# -n        numeric sort
# -r        reverse order
[cmd] | sort | uniq -c | sort -nr
