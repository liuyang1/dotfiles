[user]
    name = liuyang1
    email = liuyang1@mail.ustc.edu.cn
[color]
    ui = true
[alias]
# fetch
    ft = fetch
# add
    a = add
    ap = add -p
    chunkadd = add --patch
    aa = add -u .
# branch
    b = branch
    br = branch -v
    bd = branch -d
    bdd = branch -D
    # move current branch name with prefix Done/
    dn = "!f() { git rev-parse --abbrev-ref HEAD | xargs -I{} git branch -m {} Done/{}; }; f"
    r = remote -v
# commit
    c = commit -v
    cm = commit -v -m
    amend = commit -v --amend
    ca = commit -v --amend
    caa = commit -a --amend -C HEAD
# checkout
    co = checkout
    cb = checkout -b
# diff
    d = diff
    dd = diff .
    dc = diff --cached
    dl = diff HEAD^
    df = difftool -y
    dp = difftool --prompt
    st = diff --stat
    stc = diff --stat --cached
# log
    l = log --color --graph --pretty=format:'%Cred%h%Creset %C(bold blue)%an%x09%Creset %Cgreen%ai%Creset - %s %C(yellow)%d%Creset' --abbrev-commit
    lg = log --color --graph --stat
    la = log --color --stat -1 HEAD
    lp = log -p
    ld = log -p
    gs = log --color --graph --stat
    lc = show
    lt = describe --tags --abbrev=0
    lm = "!f() { git config user.email | xargs -I{} git l --author={} $@ ;}; f"
# pull or push
    pl = pull
    ps = push
    plr = pull --rebase
# rebase
    rc = rebase --continue
    rs = rebase --skip
# reset
    us = reset HEAD
    uc = reset --soft HEAD^
    uh = reset --hard HEAD
# merge
    mt = mergetool
# stash
    ss = stash
    sl = stash list
    sa = stash apply
    sp = stash pop
    sd = stash drop
# status
    s = status -sb
# tag
    t = tag -n
# cherry-pick
    ck = cherry-pick
[diff]
    tool = vimdiff
[merge]
    tool = vimdiff
    conflictstyle = diff3
[core]
    editor = vim
    excludesfile = ~/.gitignore_global
    quotepath = false
[i18n]
    logoutputencoding = utf8
    commitencoding = utf8
[log]
    date = default
[push]
    default = matching
[commit]
	template = ~/.gitcltpl
[pager]
    st = cat
    stc = cat
[diff "a"]
    textconv = hexdump -v -C
