[user]
    name = liuyang1
    email = liuyang1@mail.ustc.edu.cn
[color]
    ui = auto
[alias]
# fetch
    ft = fetch
# add
    a = add
    ap = add -p
    chunkadd = add --patch
    aa = add -u .
# branch
    b = branch
    br = branch -v
    bd = branch -d
    bdd = branch -D
    # move current branch name with prefix Done/
    dn = "!f() { git rev-parse --abbrev-ref HEAD | xargs -I{} git branch -m {} Done/{}; }; f"
    r = remote -v
# commit
    c = commit -v
    cs = commit -v -S
    cm = commit -v -m
    amend = commit -v --amend
    # caa = commit -a --amend -C HEAD
    # squash change to last commit message, but not edit message
    cc = commit --amend --no-edit
    cca = commit --amend --no-edit --reset-author
# checkout
    co = checkout
    cb = checkout -b
# diff
    d = diff
    dd = diff .
    dc = diff --cached
    dcs = diff --cached --stat
    dl = diff HEAD^
    df = difftool -y
    dp = difftool --prompt
    st = diff --stat
    stc = diff --stat --cached
# log
    l =  log          --graph --pretty=format:'%Cred%h%Creset %G? %C(bold green)%<(15,trunc)%an%Creset %C(cyan)%ai %Creset - %s %C(yellow)%d%Creset' --abbrev-commit
    ll = log          --graph --pretty=format:'%Cred%h%Creset %G? %C(bold green)%<(15,trunc)%an%Creset %C(cyan)%ai mrg %C(magenta)%ci %Creset - %s %C(yellow)%d%Creset' --abbrev-commit
    ltxt = log --pretty=format:'- %s' --abbrev-commit
    lg = log --graph --stat
    la = log --stat -1 HEAD
    lp = log -p -1
    lpp = log -p
    gs = log --graph --stat
    lc = show
    lt = describe --tags --abbrev=0
    lm = "!f() { git config user.email | xargs -I{} git l --author={} $@ ;}; f"
# pull or push
    pl = pull
    ps = push
    plr = pull --rebase
# rebase
    rc = rebase --continue
    rs = rebase --skip
# reset
    us = reset HEAD
    uc = reset --soft HEAD^
    uh = reset --hard HEAD
# merge
    mt = mergetool
# stash
    ss = stash
    su = stash --include-untracked
    sl = stash list
    sa = stash apply
    sp = stash pop
    sd = stash drop
# status
    s = status -sb
# tag
    t = tag -n
# cherry-pick
    ck = cherry-pick
# meld
    meld = difftool -g -d
[diff]
    tool = vimdiff
    guitool = meld
[merge]
    tool = vimdiff
    conflictstyle = diff3
[core]
    editor = vim
    excludesfile = ~/.gitignore_global
    quotepath = false
[i18n]
    logoutputencoding = utf8
    commitencoding = utf8
[log]
    date = default
[push]
    default = matching
[commit]
	template = ~/.gitcltpl
[pager]
    st = cat
    stc = cat
    lp = less
    dc = less
    d = less
    l = less
[diff "a"]
    textconv = hexdump -v -C
[diff "ta"]
    textconv = hexdump -v -C
