[alias]
# add
    a = add
    ap = add -p
    chunkadd = add --patch
# branch
    b = branch -v
    br = branch
    bd = branch -D
    r = remote -v
# commit
    c = commit -v -m
    ci = commit -v -m
    amend = commit -v --amend
# checkout
    co = checkout
    cb = checkout -b
# diff
    d = diff
    dc = diff --cached
    dl = diff HEAD^
    df = difftool -y
    dp = difftool --prompt
    stat = diff --stat
# log
    l = log --color --graph --pretty=format:'%Cred%h%Creset %C(bold blue)%an%Creset %Cgreen%cd%Creset - %s %C(yellow)%d%Creset' --abbrev-commit --
    lg = log --color --graph --pretty=format:'%Cred%h%Creset %C(bold blue)%an%Creset %Cgreen%cd%Creset - %s %C(yellow)%d%Creset' --abbrev-commit --
    last = log --color --stat -1 HEAD
    ld = log -p
    gs = log --color --graph --stat
# pull or push
    pl = pull
    ps = push
# rebase
    rc = rebase --continue
    rs = rebase --skip
# reset
    us = reset HEAD
    uc = reset --soft HEAD^
# merge
    mt = mergetool
# stash
    ss = stash
    sl = stash list
    sa = stash apply
    sd = stash drop
# status
    s = status -s
    st = status -s
# tag
    t = tag -n
[diff]
    tool = vimdiff
[merge]
    tool = vimdiff
[core]
    editor = vim
    excludesfile = ~/.gitignore_global
