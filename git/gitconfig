[user]
    name = liuyang1
    email = liuyang1@mail.ustc.edu.cn
[color]
    ui = true
[alias]
# add
    a = add
    ap = add -p
    chunkadd = add --patch
    aa = add -u .
# branch
    b = branch -v
    br = branch
    bd = branch -D
    r = remote -v
# commit
    c = commit -v
    cm = commit -v -m
    amend = commit -v --amend
# checkout
    co = checkout
    cb = checkout -b
# diff
    d = diff
    dd = diff .
    dc = diff --cached
    dl = diff HEAD^
    df = difftool -y
    dp = difftool --prompt
    st = diff --stat
# log
    l = log --color --graph --pretty=format:'%Cred%h%Creset %C(bold blue)%an%x09%Creset %Cgreen%ci%Creset - %s %C(yellow)%d%Creset' --abbrev-commit
    lg = log --color --graph --stat
    la = log --color --stat -1 HEAD
    lp = log -p
    ld = log -p
    gs = log --color --graph --stat
    lc = show
# pull or push
    pl = pull
    ps = push
# rebase
    rc = rebase --continue
    rs = rebase --skip
# reset
    us = reset HEAD
    uc = reset --soft HEAD^
    uh = reset --hard HEAD
# merge
    mt = mergetool
# stash
    ss = stash
    sl = stash list
    sa = stash apply
    sd = stash drop
# status
    s = status -sb
# tag
    t = tag -n
# cherry-pick
    ck = cherry-pick
[diff]
    tool = vimdiff
[merge]
    tool = vimdiff
[core]
    editor = vim
    excludesfile = ~/.gitignore_global
    quotepath = false
[i18n]
    logoutputencoding = utf8
    commitencoding = utf8
[log]
    date = default
[push]
    default = matching
[commit]
	template = ~/.gitcltpl
[pager]
    st = cat
